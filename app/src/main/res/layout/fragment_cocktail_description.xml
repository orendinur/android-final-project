<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ImageView
        android:id="@+id/coktailImage"
        android:layout_width="184dp"
        android:layout_height="733dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/cokctailName"
        android:layout_width="89dp"
        android:layout_height="45dp"
        android:text="name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/coktailImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/isAlcoholic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="alcoholic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/coktailImage"
        app:layout_constraintTop_toBottomOf="@+id/cokctailName" />

    <TextView
        android:id="@+id/glass"
        android:layout_width="63dp"
        android:layout_height="15dp"
        android:text="glass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/coktailImage"
        app:layout_constraintTop_toBottomOf="@+id/isAlcoholic" />

    <TextView
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="instructions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/coktailImage"
        app:layout_constraintTop_toBottomOf="@+id/glass" />
</androidx.constraintlayout.widget.ConstraintLayout>